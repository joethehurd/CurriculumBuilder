<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:MobileApplication.Models"
             x:Class="MobileApplication.MainPage">    

    <Grid
        RowDefinitions="Auto,*,Auto"
        ColumnDefinitions="*">

        <!--top section-->
        <VerticalStackLayout 
            Grid.Row="0" 
            Grid.Column="0"
            VerticalOptions="Start"
            HorizontalOptions="Center"
            Padding="20">            
            
            <Label
                Text="Strime University"                
                FontSize="36"                        
                HorizontalOptions="Center"
                VerticalOptions="Start"    
            />

            <Label
                Text="Degree Plan"                
                FontSize="16"                         
                HorizontalOptions="Center"
                VerticalOptions="Center"    
                Padding="10"
            />
           
        </VerticalStackLayout>

        <!--middle section-->
        <Grid 
            Grid.Row="1" 
            Grid.Column="0" 
            VerticalOptions="Fill" 
            HorizontalOptions="StartAndExpand">

            <Label
                Text="Terms"                
                FontSize="18"                 
                FontAttributes="Bold"
                TextDecorations="Underline"
                HorizontalOptions="Start"
                VerticalOptions="Start"  
                Padding="20,0,0,0"
                Margin="0,-5,0,0"
            />

            <Grid 
                RowDefinitions="*"
                ColumnDefinitions="0.5*"
                VerticalOptions="StartAndExpand"
                HorizontalOptions="CenterAndExpand"
                Padding="10"
                Margin="0,20,0,0">

                <CollectionView x:Name="TermCollectionView">                    
                    <CollectionView.ItemsSource>
                        <x:Array Type="{x:Type model:Term}">
                            
                        </x:Array>
                    </CollectionView.ItemsSource>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Term">
                            <Grid Padding="0,10">
                                <Frame>
                                    <FlexLayout
                                        HorizontalOptions="Center"                                     
                                        Margin="0,-10,0,-10"
                                        JustifyContent="SpaceBetween">

                                        <Label Text="{Binding Name}"
                                               FontSize="16"                                              
                                               VerticalOptions="Center"                                            
                                        />

                                        <Button 
                                            x:Name="ViewTermButton"                                        
                                            Text="View"                                                                                      
                                            SemanticProperties.Hint="View Selected Term"   
                                            MinimumHeightRequest="20"
                                            MinimumWidthRequest="20" 
                                            VerticalOptions="Center"                                                  
                                            Clicked="ViewTermButton_Clicked"
                                            CommandParameter="{Binding Id}"
                                        />
                                    </FlexLayout>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Grid>

        <!--bottom section-->
        <HorizontalStackLayout 
            Grid.Row="2" 
            Grid.Column="0" 
            VerticalOptions="End" 
            HorizontalOptions="Center"
            Padding="20">
            
            <Button
                x:Name="AddTermButton"
                Text="Add Term"               
                SemanticProperties.Hint="Add a new Term"    
                MinimumWidthRequest="280" 
                Clicked="AddTermButton_Clicked"
            />
        </HorizontalStackLayout>


    </Grid>
</ContentPage>
